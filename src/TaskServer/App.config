<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="ookii.jumbo" type="Ookii.Jumbo.JumboConfiguration, Ookii.Jumbo"/>
    <section name="ookii.jumbo.jet" type="Ookii.Jumbo.Jet.JetConfiguration, Ookii.Jumbo.Jet"/>
    <section name="ookii.jumbo.dfs" type="Ookii.Jumbo.Dfs.DfsConfiguration, Ookii.Jumbo.Dfs"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  
  <ookii.jumbo configSource="common.config"/>
  <ookii.jumbo.jet configSource="jet.config"/>
  <ookii.jumbo.dfs configSource="dfs.config"/>

  <log4net>
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%property{LogDirectory}log-TaskServer-%property{LocalHostName}.txt"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd"/>
      <appendToFile value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{ClientHostName}] - %message%newline"/>
      </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{ClientHostName}] - %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="FileAppender"/>
    </root>
  </log4net>
  <startup>
    
  <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2"/></startup>
</configuration>
